<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cameraactivity">




    <SurfaceView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/surface"/>
    <ImageButton
        android:id="@+id/flashbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:background="@color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/ic_flash_on" />
    <TextView
        android:layout_below="@+id/flashbtn"
        android:layout_width="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="Flash"
        android:id="@+id/txtflash"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_height="wrap_content"></TextView>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/rtl1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@color/transparent">

            <TextView
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_white_corner_5"
                android:gravity="center"
                android:padding="2dp"
                android:id="@+id/time15sec"
                android:text="15Sec's"
                android:textSize="13sp" />

            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:background="@drawable/bg_white_corner_5"
                android:gravity="center"
                android:id="@+id/time30sec"

                android:padding="2dp"
                android:text="30Sec's"
                android:textSize="13sp" />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rtl1"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="58dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_record_start_">

            <ImageView
                android:id="@+id/btn_capture"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="record"
                tools:src="@drawable/ic_record_stop_" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:elevation="50dp"
                android:src="@drawable/bg_white_corner_5"

                android:tint="@color/colorAccent"

                android:contentDescription="image"
                tools:src="@drawable/bg_white_corner_5" />
        </RelativeLayout>


        <ImageButton
            android:id="@+id/switchCamera"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentEnd="true"
            android:background="@color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/cameraflip" />
        <TextView
            android:layout_below="@id/switchCamera"
            android:layout_alignParentEnd="true"
            android:layout_width="50dp"
            android:text="Flip"
            android:gravity="center"
            android:id="@+id/fliptxt"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"></TextView>
        <ImageButton
            android:layout_below="@+id/fliptxt"
            android:id="@+id/maskbtn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentEnd="true"
            android:background="@color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/maskvect" />
        <TextView
            android:layout_below="@id/maskbtn"
            android:layout_alignParentEnd="true"
            android:layout_width="50dp"
            android:text="Masks"
            android:id="@+id/masktxt"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"></TextView>
        <ImageButton
            android:layout_below="@+id/masktxt"
            android:id="@+id/effectbtn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentEnd="true"
            android:background="@color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/effects" />
        <TextView
            android:layout_below="@id/effectbtn"
            android:layout_alignParentEnd="true"
            android:layout_width="50dp"
            android:text="Effects"
            android:id="@+id/effecttxt"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"></TextView>
        <ImageButton
            android:layout_below="@+id/effecttxt"
            android:id="@+id/filterbtn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentEnd="true"
            android:background="@color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/filtericon" />
        <TextView
            android:layout_below="@id/filterbtn"
            android:layout_alignParentEnd="true"
            android:layout_width="50dp"
            android:text="Filters"
            android:id="@+id/filtertxt"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"></TextView>


        <ImageButton
            android:id="@+id/previousMask"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:background="@null"
            android:visibility="visible"
            android:scaleType="centerInside"
            android:src="@drawable/arrow_left" />


        <ImageButton
            android:id="@+id/nextMaskk"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:visibility="visible"
            android:layout_marginEnd="20dp"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/arrow_right" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:visibility="visible"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true">

            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/masks"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@android:color/white"
                    android:checked="true"/>

                <TextView
                    android:id="@+id/textMasks"
                    android:text="Masks"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/masks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/effects"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@android:color/white"
                    android:checked="false"/>

                <TextView
                    android:id="@+id/textEffects"
                    android:text="Effects"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/effects"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/filters"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@android:color/white"
                    android:checked="false"/>

                <TextView
                    android:id="@+id/textFilters"
                    android:text="Filters"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/filters"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>